{
  "name": "preflight-mcp",
  "version": "0.2.2",
  "description": "MCP server that creates evidence-based preflight bundles for GitHub repositories and library docs.",
  "type": "module",
  "license": "MIT",
  "author": "preflight-mcp contributors",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jonnyhoo/preflight-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/jonnyhoo/preflight-mcp/issues"
  },
  "homepage": "https://github.com/jonnyhoo/preflight-mcp#readme",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "llm",
    "github",
    "repository",
    "documentation",
    "search",
    "fts5",
    "sqlite",
    "claude",
    "agents"
  ],
  "bin": {
    "preflight-mcp": "dist/index.js"
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "smoke": "npm run build && node scripts/smoke.mjs",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@vscode/tree-sitter-wasm": "^0.3.0",
    "adm-zip": "^0.5.16",
    "better-sqlite3": "^12.5.0",
    "ignore": "^7.0.5",
    "node-cron": "^4.2.1",
    "web-tree-sitter": "^0.26.3",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/adm-zip": "^0.5.7",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@types/node-cron": "^3.0.11",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
